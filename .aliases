if command -v tmux >/dev/null 2>&1; then
  alias ta="tmux a"
fi
if command -v nvim >/dev/null 2>&1; then
  alias vim="nvim"
fi

# GitHub Copilot cli
if command -v github-copilot-cli 2>&1; then
  eval "$(github-copilot-cli alias -- "$0")"
fi

